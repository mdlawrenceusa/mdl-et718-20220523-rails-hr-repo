<p>
  <strong>Title:</strong>
  <%= job.title %>
</p>

<p>
  <strong>Start Date:</strong>
  <%= job.start_date %>
</p>

<p>
  <strong>End Date:</strong>
  <%= job.end_date %>
</p>

<p>
  <strong>Description:</strong>
  <%= job.description %>
</p>



<% if job.end_date = "Current" %>

 <div class="w3-container">
          <h5 class="w3-opacity"><b><%= job.title %></b></h5>
          <h6 class="w3-text-teal"><i class="fa fa-calendar fa-fw w3-margin-right"></i><%= job.start_date %> - <span class="w3-tag w3-teal w3-round">Current</span></h6>
          <p><%= job.description %></p>
          <hr>
  </div>

<% else %>

<div class="w3-container">
          <h5 class="w3-opacity"><b><%= job.title %></b></h5>
          <h6 class="w3-text-teal"><i class="fa fa-calendar fa-fw w3-margin-right"></i><%= job.start_date %> - <%= job.start_date %></h6>
          <p><%= job.description %></p>
          <hr>
        </div>

<% end %>



<p>
  <%= link_to 'Remove Work History', [job.resume, job],
               method: :delete,
               data: { confirm: 'Are you sure?' } %>
</p>